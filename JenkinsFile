pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                echo 'Cloning the repo...'
                // This would clone from GitHub in real-world use
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build('todo-app-image')
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    docker.image('todo-app-image').run('-p 5000:5000')
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline execution completed.'
        }
    }
}
